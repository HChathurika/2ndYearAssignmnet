<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/21"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="controller.NoteController"
      spacing="10" alignment="TOP_LEFT">
    <padding>
        <Insets top="15" right="15" bottom="15" left="15"/>
    </padding>

    <!-- Title input -->
    <HBox spacing="10">
        <Label text="Title:"/>
        <TextField fx:id="titleInput" promptText="Enter note title" HBox.hgrow="ALWAYS"/>
    </HBox>

    <!-- Content input -->
    <VBox spacing="5">
        <Label text="Content:"/>
        <TextArea fx:id="contentInput" promptText="Write your note here..." prefRowCount="5"/>
    </VBox>

    <!-- Add button -->
    <Button text="Add" onAction="#addNote" maxWidth="100"/>

    <!-- Saved notes section -->
    <Label text="Saved Notes:" style="-fx-font-weight: bold;"/>
    <ListView fx:id="notesList" prefHeight="200"/>
</VBox>
